<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.minixalpha.webo"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="14"
        android:targetSdkVersion="17" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".WeboApplication"
        android:allowBackup="true"
        android:icon="@drawable/feather"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:icon="@drawable/feather"
            android:label="@string/app_name"
            android:launchMode="singleTop"
            android:theme="@style/WeboActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".ViewPagerActivity"
            android:launchMode="singleTop"
            android:theme="@style/WeboActionBar" >
        </activity>
        <activity
            android:name=".HomePageActivity"
            android:label="@string/title_activity_home_page"
            android:theme="@style/WeboActionBar" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewPagerActivity" />
        </activity>
        <activity
            android:name=".SearchActivity"
            android:label="@string/title_activity_search"
            android:launchMode="singleTop"
            android:theme="@style/WeboActionBar" >
            <intent-filter>
                <action android:name="android.intent.action.SEARCH" />
            </intent-filter>

            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewPagerActivity" />
            <meta-data
                android:name="android.app.searchable"
                android:resource="@xml/searchable" />
        </activity>
        <activity
            android:name=".RetweetReplyActivity"
            android:windowSoftInputMode="adjustResize" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewPagerActivity" />
        </activity>
        <activity
            android:name=".WeiboDetailsActivity"
            android:label="@string/title_activity_weibo_details" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewPagerActivity" />
        </activity>
        <activity
            android:name=".ConfigureActivity"
            android:label="@string/title_activity_configure" >
             <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value=".ViewPagerActivity" />
        </activity>
    </application>

</manifest>